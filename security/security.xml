<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- USER GROUPS                                -->
    <!-- ========================================== -->
    
<record id="module_category_peepl_weekly_report" model="ir.module.category">
    <field name="name">Weekly Report</field>
    <field name="description">Manage access to weekly report features</field>
    <field name="sequence">25</field>
</record>

<record model="res.groups.privilege" id="res_groups_privilege_weekly_report">
    <field name="name">Weekly Report</field>
    <field name="sequence">1</field>
    <field name="category_id" ref="module_category_peepl_weekly_report"/>
</record>

<record id="group_peepl_staff" model="res.groups">
    <field name="name">User</field>
    <field name="privilege_id" ref="res_groups_privilege_weekly_report"/>
    <field name="comment">User can access their own reports</field>
    <field name="sequence">10</field>
</record>

<record id="group_peepl_supervisor" model="res.groups">
    <field name="name">Supervisor</field>
    <field name="privilege_id" ref="res_groups_privilege_weekly_report"/>
    <field name="implied_ids" eval="[(4, ref('group_peepl_staff'))]"/>
    <field name="comment">Supervisor can access department reports</field>
    <field name="sequence">20</field>
</record>

<record id="group_peepl_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="privilege_id" ref="res_groups_privilege_weekly_report"/>
    <field name="implied_ids" eval="[(4, ref('group_peepl_staff'))]"/>
    <field name="comment">Manager can access department reports</field>
    <field name="sequence">30</field>
</record>

<record id="group_peepl_bod" model="res.groups">
    <field name="name">All Access</field>
    <field name="privilege_id" ref="res_groups_privilege_weekly_report"/>
    <field name="implied_ids" eval="[(4, ref('group_peepl_manager')), (4, ref('group_peepl_supervisor'))]"/>
    <field name="comment">Can access all reports</field>
    <field name="sequence">40</field>
</record>


    <!-- ========================================== -->
    <!-- RECORD RULES: WEEKLY REPORT                -->
    <!-- ========================================== -->
    
    <record id="rule_weekly_report_staff" model="ir.rule">
        <field name="name">Staff: Own Reports</field>
        <field name="model_id" ref="model_peepl_weekly_report"/>
        <field name="domain_force">[('pic_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_staff'))]"/>
    </record>

    <record id="rule_weekly_report_supervisor" model="ir.rule">
        <field name="name">Supervisor: Division Reports</field>
        <field name="model_id" ref="model_peepl_weekly_report"/>
        <field name="domain_force">['|', ('pic_id', '=', user.id), '&amp;', ('pic_id.user_assignment_ids.division_id', 'in', user.user_assignment_ids.mapped('division_id').ids), ('pic_id.user_assignment_ids.active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_supervisor'))]"/>
    </record>

    <record id="rule_weekly_report_manager" model="ir.rule">
        <field name="name">Manager: Department Reports</field>
        <field name="model_id" ref="model_peepl_weekly_report"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_manager'))]"/>
    </record>

    <record id="rule_weekly_report_bod" model="ir.rule">
        <field name="name">BOD: All Reports</field>
        <field name="model_id" ref="model_peepl_weekly_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_bod'))]"/>
    </record>

    <!-- ========================================== -->
    <!-- RECORD RULES: USER ASSIGNMENT              -->
    <!-- ========================================== -->
    
    <record id="rule_user_assignment_staff" model="ir.rule">
        <field name="name">Staff: Own Assignment</field>
        <field name="model_id" ref="model_peepl_user_assignment"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_staff'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_user_assignment_supervisor" model="ir.rule">
        <field name="name">Supervisor: Division Access</field>
        <field name="model_id" ref="model_peepl_user_assignment"/>
        <field name="domain_force">[('division_id', 'in', user.user_assignment_ids.mapped('division_id').ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_supervisor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="rule_user_assignment_manager" model="ir.rule">
        <field name="name">Manager: Department Access</field>
        <field name="model_id" ref="model_peepl_user_assignment"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="rule_user_assignment_bod" model="ir.rule">
        <field name="name">BOD: All Assignments</field>
        <field name="model_id" ref="model_peepl_user_assignment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_bod'))]"/>
    </record>

    <!-- ========================================== -->
    <!-- RECORD RULES: FIELD TEMPLATE               -->
    <!-- ========================================== -->
    
    <record id="rule_field_template_staff" model="ir.rule">
        <field name="name">Staff: Department Only</field>
        <field name="model_id" ref="model_peepl_field_template"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_staff'))]"/>
    </record>

    <record id="rule_field_template_supervisor" model="ir.rule">
        <field name="name">Supervisor: Department Only</field>
        <field name="model_id" ref="model_peepl_field_template"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_supervisor'))]"/>
    </record>

    <record id="rule_field_template_manager" model="ir.rule">
        <field name="name">Manager: Department Only</field>
        <field name="model_id" ref="model_peepl_field_template"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_manager'))]"/>
    </record>

    <record id="rule_field_template_bod" model="ir.rule">
        <field name="name">BOD: All Templates</field>
        <field name="model_id" ref="model_peepl_field_template"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_bod'))]"/>
    </record>

    <!-- ========================================== -->
    <!-- RECORD RULES: PIC OVERVIEW                 -->
    <!-- ========================================== -->
    
    <record id="rule_pic_overview_staff" model="ir.rule">
        <field name="name">Staff: Own Overview</field>
        <field name="model_id" ref="model_peepl_pic_overview"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_staff'))]"/>
    </record>

    <record id="rule_pic_overview_supervisor" model="ir.rule">
        <field name="name">Supervisor: Division Only</field>
        <field name="model_id" ref="model_peepl_pic_overview"/>
        <field name="domain_force">[('user_id.user_assignment_ids.division_id', 'in', user.user_assignment_ids.mapped('division_id').ids), ('user_id.user_assignment_ids.active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_supervisor'))]"/>
    </record>

    <record id="rule_pic_overview_manager" model="ir.rule">
        <field name="name">Manager: Department Only</field>
        <field name="model_id" ref="model_peepl_pic_overview"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_manager'))]"/>
    </record>

    <record id="rule_pic_overview_bod" model="ir.rule">
        <field name="name">BOD: All Overview</field>
        <field name="model_id" ref="model_peepl_pic_overview"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_bod'))]"/>
    </record>

    <!-- ========================================== -->
    <!-- RECORD RULES: DIVISION                     -->
    <!-- ========================================== -->
    
    <record id="rule_division_supervisor" model="ir.rule">
        <field name="name">Supervisor: Department Only</field>
        <field name="model_id" ref="model_peepl_division"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_supervisor'))]"/>
    </record>

    <record id="rule_division_manager" model="ir.rule">
        <field name="name">Manager: Department Only</field>
        <field name="model_id" ref="model_peepl_division"/>
        <field name="domain_force">[('department_id', 'in', user.weekly_report_department_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_manager'))]"/>
    </record>

    <record id="rule_division_bod" model="ir.rule">
        <field name="name">BOD: All Divisions</field>
        <field name="model_id" ref="model_peepl_division"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_peepl_bod'))]"/>
    </record>
</odoo>