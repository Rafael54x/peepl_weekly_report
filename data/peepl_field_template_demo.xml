<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="field_template_priority" model="peepl.field.template">
            <field name="name">Priority Level</field>
            <field name="description">Task priority level</field>
            <field name="sequence">10</field>
            <field name="field_type">selection</field>
            <field name="department_id" ref="hr.dep_management"/>
            <field name="selection_values">Low
Medium
High
Critical</field>
            <field name="active" eval="False"/>
        </record>

        <record id="field_template_category" model="peepl.field.template">
            <field name="name">Category</field>
            <field name="description">Task category</field>
            <field name="sequence">20</field>
            <field name="field_type">selection</field>
            <field name="selection_values">Development
Design
Testing
Documentation</field>
            <field name="active" eval="False"/>
        </record>

        <record id="field_template_reviewer" model="peepl.field.template">
            <field name="name">Reviewer</field>
            <field name="description">Person who will review this task</field>
            <field name="sequence">30</field>
            <field name="field_type">many2one</field>
            <field name="relation_model">res.users</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>
