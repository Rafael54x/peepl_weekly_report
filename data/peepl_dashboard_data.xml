<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="board_weekly_report_dashboard" model="ir.actions.act_window">
        <field name="name">Weekly Report Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_weekly_report_dashboard_view"/>
    </record>

    <record id="board_weekly_report_dashboard_view" model="ir.ui.view">
        <field name="name">Weekly Report Dashboard</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Weekly Report Dashboard">
                <board style="2-1">
                    <column>
                        <action name="%(action_peepl_weekly_report)d" string="Weekly Reports"/>
                        <action name="%(action_peepl_pic_overview)d" string="PIC Overview"/>
                    </column>
                    <column>
                        <action name="%(peepl_dashboard)d" string="Dashboard Analytics"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <menuitem id="menu_weekly_report_dashboard"
              name="Weekly Report"
              parent="base.menu_board_root"
              action="board_weekly_report_dashboard"
              sequence="10"/>
</odoo>