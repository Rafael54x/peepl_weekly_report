<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- MODULE CATEGORY                            -->
    <!-- ========================================== -->
    
    <record model="ir.module.category" id="module_category_peepl_weekly_report">
        <field name="name">Weekly Reports</field>
        <field name="description">Akses untuk laporan mingguan Peepl.</field>
        <field name="sequence">10</field>
    </record>

    <!-- ========================================== -->
    <!-- CRON JOB                                   -->
    <!-- ========================================== -->
    
    <data noupdate="1">
        <record id="cron_update_overdue_status" model="ir.cron">
            <field name="name">Update Overdue Status</field>
            <field name="model_id" ref="model_peepl_weekly_report"/>
            <field name="state">code</field>
            <field name="code">model.update_overdue_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>