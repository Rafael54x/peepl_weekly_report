<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_peepl_pic_overview_tree" model="ir.ui.view">
        <field name="name">peepl.pic.overview.tree</field>
        <field name="model">peepl.pic.overview</field>
        <field name="arch" type="xml">
            <list create="false">
                <header>
                    <button name="update_overview" string="Update" type="object" class="btn-primary"/>
                </header>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="position" width="100px" string="Positions"/>
                <field name="total_tasks" width="120px" class="text-center"/>
                <field name="completed" width="120px" class="text-center"/>
                <field name="in_progress" width="120px" class="text-center"/>
                <field name="not_started" width="120px" class="text-center"/>
                <field name="delayed" width="120px" class="text-center"/>
                <field name="plan" width="120px" class="text-center"/>
                <field name="avg_progress" widget="progressbar" width="150px"/>
                <field name="overdue" width="120px" class="text-center"/>
            </list>
        </field>
    </record>

    <record id="view_peepl_pic_overview_form" model="ir.ui.view">
        <field name="name">peepl.pic.overview.form</field>
        <field name="model">peepl.pic.overview</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="position" readonly="1" string="Positions"/>
                            <field name="total_tasks" readonly="1"/>
                            <field name="completed" readonly="1"/>
                            <field name="in_progress" readonly="1"/>
                        </group>
                        <group>
                            <field name="not_started" readonly="1"/>
                            <field name="delayed" readonly="1"/>
                            <field name="plan" readonly="1"/>
                            <field name="avg_progress" widget="progressbar" readonly="1"/>
                            <field name="overdue" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_peepl_pic_overview" model="ir.actions.act_window">
        <field name="name">PIC Overview</field>
        <field name="res_model">peepl.pic.overview</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False, 'edit': False}</field>
    </record>

    <menuitem id="menu_peepl_pic_overview_main"
              name="PIC Overview"
              parent="menu_peepl_weekly_report_root"
              action="action_peepl_pic_overview"
              sequence="15"/>
</odoo>