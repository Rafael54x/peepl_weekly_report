<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_peepl_field_template_tree" model="ir.ui.view">
        <field name="name">peepl.field.template.tree</field>
        <field name="model">peepl.field.template</field>
        <field name="arch" type="xml">
            <list default_order="sequence desc">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="field_type"/>
                <field name="department_id"/>
                <field name="anchor_field" string="Position"/>
                <field name="position" string="Insert"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_peepl_field_template_form" model="ir.ui.view">
        <field name="name">peepl.field.template.form</field>
        <field name="model">peepl.field.template</field>
        <field name="arch" type="xml">
            <form create="true" edit="true" delete="true">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Field Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Priority Level"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="field_type"/>
                            <field name="allowed_department_ids" invisible="1"/>
                            <field name="department_id" domain="[('id', 'in', allowed_department_ids)]"/>
                        </group>
                        <group>
                            <field name="anchor_field"/>
                            <field name="position"/>
                            <field name="description"/>
                        </group>
                    </group>
                    
                    <group string="Field Type Options" invisible="field_type not in ['selection', 'many2one']">
                        <field name="selection_values" invisible="field_type != 'selection'" 
                               placeholder="Option 1&#10;Option 2&#10;Option 3" nolabel="1"/>
                        <field name="relation_model" invisible="field_type != 'many2one'" 
                               placeholder="e.g. res.partner" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <div class="o_form_statusbar d-flex justify-content-between py-2">
                        <div class="o_statusbar_buttons d-flex align-items-center align-content-around flex-wrap gap-1">
                            <button string="Save &amp; Reload" class="btn btn-primary" type="object" name="action_refresh_page"/>
                        </div>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_peepl_field_template" model="ir.actions.act_window">
        <field name="name">Field Templates</field>
        <field name="res_model">peepl.field.template</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_peepl_field_template"
              name="Field Templates"
              parent="menu_peepl_weekly_report_configuration"
              action="action_peepl_field_template"
              sequence="9"
              groups="peepl_weekly_report.group_peepl_supervisor,peepl_weekly_report.group_peepl_manager,peepl_weekly_report.group_peepl_bod"/>
</odoo>
