<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_peepl_user_assignment_tree" model="ir.ui.view">
        <field name="name">peepl.user.assignment.tree</field>
        <field name="model">peepl.user.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="job_id" string="Job Position"/>
                <field name="department_id"/>
                <field name="assigned_by"/>
            </list>
        </field>
    </record>

    <record id="view_peepl_user_assignment_form" model="ir.ui.view">
        <field name="name">peepl.user.assignment.form</field>
        <field name="model">peepl.user.assignment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="allowed_user_ids" invisible="1"/>
                        <field name="allowed_job_ids" invisible="1"/>
                        <field name="allowed_department_ids" invisible="1"/>
                        <field name="user_id" domain="[('id', 'in', allowed_user_ids)]"/>
                        <field name="job_id" string="Job Position" domain="[('id', 'in', allowed_job_ids)]" readonly="1"/>
                        <field name="department_id" domain="[('id', 'in', allowed_department_ids)]" readonly="1"/>
                        <field name="assigned_by" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_peepl_user_assignment_new" model="ir.actions.act_window">
        <field name="name">User Assignments</field>
        <field name="res_model">peepl.user.assignment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_peepl_user_assignment"
              name="User Assignments"
              parent="menu_peepl_weekly_report_configuration"
              action="action_peepl_user_assignment_new"
              sequence="8"
              groups="peepl_weekly_report.group_peepl_manager,peepl_weekly_report.group_peepl_bod"/>
</odoo>