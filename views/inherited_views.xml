<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- RES.USERS INHERITED VIEWS                  -->
    <!-- ========================================== -->
    
    <record id="view_users_form_weekly_access" model="ir.ui.view">
        <field name="name">res.users.form.weekly.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <field name="login" position="after">
                <field name="weekly_report_access"/>
            </field>
        </field>
    </record>

    <record id="view_users_form_weekly_report" model="ir.ui.view">
        <field name="name">res.users.form.weekly.report</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <div class="o_inner_group grid col-lg-6">
                    <div class="g-col-sm-2">
                        <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">Weekly Reports</div>
                    </div>
                    <div class="o_cell o_wrap_label text-break text-900">
                        <label class="o_form_label" for="weekly_report_access">Access Level</label>
                    </div>
                    <div class="o_cell o_wrap_input text-break mb-3 mb-sm-0">
                        <field name="weekly_report_access"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- RES.CONFIG.SETTINGS INHERITED VIEWS        -->
    <!-- ========================================== -->
    
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.peepl</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Weekly Report" name="peepl_weekly_report">
                    <block title="Access Control">
                        <setting>
                            <label for="current_user_role"/>
                            <div>
                                <field name="current_user_role" readonly="1" class="oe_inline"/>
                            </div>
                        </setting>
                    </block>
                    <block title="Report Settings">
                        <setting>
                            <field name="report_email"/>
                            <div class="text-muted">
                                Email address to send weekly reports
                            </div>
                        </setting>
                        <setting>
                            <field name="auto_send"/>
                            <div class="text-muted">
                                Automatically send reports weekly
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_peepl_weekly_report_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'module': 'peepl_weekly_report'}</field>
    </record>

    <menuitem id="menu_peepl_weekly_report_configuration"
              name="Configuration"
              parent="menu_peepl_weekly_report_root"
              groups="peepl_weekly_report.group_peepl_staff,peepl_weekly_report.group_peepl_manager,peepl_weekly_report.group_peepl_bod"
              sequence="90"/>

    <menuitem id="menu_peepl_weekly_report_config"
              name="Settings"
              parent="menu_peepl_weekly_report_configuration"
              action="action_peepl_weekly_report_config"
              sequence="1"
              groups="peepl_weekly_report.group_peepl_staff,peepl_weekly_report.group_peepl_manager,peepl_weekly_report.group_peepl_bod"/>
</odoo>