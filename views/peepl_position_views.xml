<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Position Tree View -->
    <record id="view_peepl_position_tree" model="ir.ui.view">
        <field name="name">peepl.position.tree</field>
        <field name="model">peepl.position</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="level"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Position Form View -->
    <record id="view_peepl_position_form" model="ir.ui.view">
        <field name="name">peepl.position.form</field>
        <field name="model">peepl.position</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="level"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Position Action -->
    <record id="action_peepl_position" model="ir.actions.act_window">
        <field name="name">Positions</field>
        <field name="res_model">peepl.position</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_peepl_position"
              name="Positions"
              parent="menu_peepl_weekly_report_configuration"
              action="action_peepl_position"
              groups="peepl_weekly_report.group_peepl_manager,peepl_weekly_report.group_peepl_bod"
              sequence="15"/>
</odoo>
