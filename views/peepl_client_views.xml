<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_peepl_client_tree" model="ir.ui.view">
        <field name="name">peepl.client.tree</field>
        <field name="model">peepl.client</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_peepl_client_form" model="ir.ui.view">
        <field name="name">peepl.client.form</field>
        <field name="model">peepl.client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_peepl_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">peepl.client</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_peepl_client"
              name="Clients"
              parent="menu_peepl_weekly_report_configuration"
              action="action_peepl_client"
              groups="peepl_weekly_report.group_peepl_manager,peepl_weekly_report.group_peepl_bod"
              sequence="3"/>
</odoo>
