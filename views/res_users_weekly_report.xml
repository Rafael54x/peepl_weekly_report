<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_weekly_report" model="ir.ui.view">
        <field name="name">res.users.form.weekly.report</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <div class="o_inner_group grid col-lg-6">
                    <div class="g-col-sm-2">
                        <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">Weekly Reports</div>
                    </div>
                    <div class="o_cell o_wrap_label text-break text-900">
                        <label class="o_form_label" for="weekly_report_access">Access Level</label>
                    </div>
                    <div class="o_cell o_wrap_input text-break mb-3 mb-sm-0">
                        <field name="weekly_report_access" onchange="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>